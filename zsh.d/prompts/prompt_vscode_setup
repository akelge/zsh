function prompt_minimal_setup { 
# Setup PROMPT
if `fancyTerm`; then
    # We are on xterminal
    W="%n@%m:%."
    I="%m:%."
    L="%B%3(~:...:)%2~ %#%b "
    PS1="%{]2;$W%}%{]1;$I%}$L"
    unset W I L

else
    # We are not on xterminal
    PS1="%B%. %#%b "
fi
}

prompt_minimal_setup

