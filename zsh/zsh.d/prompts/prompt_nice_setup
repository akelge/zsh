function prompt_nice_setup {

if [ ${TERM[0,5]} = "xterm" ] || [ ${TERM} = "rxvt" ]; then
    W="::: %n at %m in %. :::"
    I="%m::%."
    L="%B%K{blue}%F{white}@%m::%2~ %f%k
%F{yellow}%#%f%b "
    PS1="%{]2;$W%}%{]1;$I%}$L"
    unset W I L

else
    # We are not on xterminal
    PS1="%B%K{blue}%F{white}[%l] %n@%m:%~ %f%k%F{yellow}%#%f%b "
fi
}

prompt_nice_setup

